<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orangeBackground"
    tools:context="com.example.usuario.proyectodam2.register_screen">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/osohormiguero"
        android:id="@+id/imageView"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:id="@+id/tvJoin"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Join Hungry Crossing"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvJoin"
        android:id="@+id/scrollregister">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearregister">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Name: "
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"/>
            <TextView
                android:text="Username: "
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUsername"
                android:layout_marginTop="15dp" />

            <TextView
                android:text="Password: "
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPassword"
                android:layout_marginTop="15dp" />
            <TextView
                android:text="Confirm Password:"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvConfirmpass"
                android:layout_marginTop="15dp" />
            <TextView
                android:text="E-mail: "
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmail"
                android:layout_marginTop="15dp" />
            <TextView
                android:text="Postal code: "
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCP"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <EditText
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="35dp"
                android:padding="10px"
                android:layout_centerHorizontal="true"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:id="@+id/etName"
                android:hint="Introduce Name"
                android:background="@drawable/border"
                android:textSize="16sp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:id="@+id/etUsername"
                android:textColor="#000"
                android:background="@drawable/border"
                android:textSize="16sp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:id="@+id/etPassword"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:padding="10px"
                android:hint="Introduce Password"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:inputType="textPassword"
                android:background="@drawable/border"
                android:textSize="16sp"
                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:id="@+id/etConfirmPass"
                android:textColor="#000"
                android:padding="10px"
                android:layout_centerHorizontal="true"
                android:hint="Introduce Password"
                android:inputType="textPassword"
                android:background="@drawable/border"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:textSize="16sp"

                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:id="@+id/etMail"
                android:textColor="#000"
                android:padding="10px"
                android:layout_centerHorizontal="true"
                android:hint="Introduce Mail"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:background="@drawable/border"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:id="@+id/etCP"
                android:hint="Introduce Postal Code"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:background="@drawable/border"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollregister"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="ERROR"
        android:visibility="invisible"
        android:id="@+id/tvErrorReg"

        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textSize="18sp"
        android:text="SIGN UP"
        android:layout_below="@+id/scrollregister"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:textColor="#FFF"
        android:id="@+id/btnSign"

        />

</RelativeLayout>

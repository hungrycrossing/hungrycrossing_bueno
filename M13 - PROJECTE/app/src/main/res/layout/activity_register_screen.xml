<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orangeBackground"
    tools:context="com.example.usuario.proyectodam2.loading_screen">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/osohormiguero"
        android:id="@+id/imageView"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:id="@+id/tvJoin"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="Join Hungry Crossing"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJoin"
        android:orientation="horizontal"
        android:id="@+id/linearregister">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvJoin"
            android:orientation="vertical">
            <TextView
                android:text="Username: "
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUsername"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true" />


            />
            <TextView
                android:text="Password: "
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPassword"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tvUsername"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="Confirm
Password:"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvConfirmpass"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tvUsername"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="E-mail: "
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmail"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tvUsername"
                android:layout_alignParentStart="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvJoin"
            android:orientation="vertical">

            <EditText
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginTop="35dp"
                android:id="@+id/etUsername"
                android:hint="Introduce username"
                android:background="@drawable/border"
                android:textSize="16dp" />
            <EditText
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:id="@+id/etPassword"
                android:hint="Introduce Password"
                android:background="@drawable/border"
                android:textSize="16dp" />
            <EditText
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:id="@+id/etConfirmPass"
                android:hint="Introduce Password"
                android:background="@drawable/border"
                android:inputType="textPassword"
                android:textSize="16dp"
                />
            <EditText
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:id="@+id/etMail"
                android:hint="Introduce Password"
                android:background="@drawable/border"
                android:textSize="16dp"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textSize="18dp"
        android:text="SIGN UP"
        android:layout_below="@+id/linearregister"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:textColor="#FFF"
        android:id="@+id/btnSign"

        />

</RelativeLayout>

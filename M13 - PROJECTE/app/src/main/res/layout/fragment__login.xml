<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orangeBackground"
    tools:context="com.example.usuario.proyectodam2.login_screen">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/osohormiguero"
        android:id="@+id/imageView"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:id="@+id/layout3"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:text="Username: "
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUsername"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"

            />
        <EditText
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/tvUsername"
            android:layout_below="@+id/imageView"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:id="@+id/etUsernameLogin"
            android:hint="Introduce username"
            android:background="@drawable/border"
            android:textSize="16dp"
            android:padding="10px"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout4">
        <TextView
            android:text="Password: "
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPassword"
            android:layout_marginLeft="30dp"

            android:layout_below="@+id/tvUsername"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/tvPassword"
            android:layout_below="@+id/etUsername"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:id="@+id/etPasswordLogin"
            android:hint="Introduce Password"
            android:background="@drawable/border"
            android:textSize="16dp"
            android:padding="10px"
            android:inputType="textPassword"


            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:text="User and/or password may not correct"
        android:layout_below="@+id/layout3"

        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/tvErrorLogin"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:orientation="horizontal"
        android:layout_below="@+id/layout3"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"

        android:layout_centerHorizontal="true"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Login"
            android:background="@drawable/button"
            android:textColor="#FFF"
            android:id="@+id/btnLogin"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Sign up"
            android:background="@drawable/button"
            android:textColor="#FFF"
            android:id="@+id/btnRegister"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>




</RelativeLayout>


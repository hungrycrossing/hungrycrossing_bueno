<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orangeBackground"
    tools:context="com.example.usuario.proyectodam2.loading_screen">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/osohormiguero"
        android:id="@+id/imageView"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Username: "
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsername"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Password: "
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvUsername"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        android:text="User and/or password may not correct"
        android:layout_below="@+id/etPassword"
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/tvErrorLogin"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:orientation="horizontal"
        android:layout_below="@+id/tvPassword"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Login"
            android:background="@drawable/button"
            android:textColor="#FFF"
            android:id="@+id/btnLogin"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Sign up"
            android:background="@drawable/button"
            android:textColor="#FFF"
            android:id="@+id/btnRegister"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <EditText
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/tvUsername"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/etUsername"
        android:hint="Introduce username"
        android:background="@drawable/border"
        android:textSize="16dp"
        android:paddingLeft="8px"

        />
    <EditText
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/tvPassword"
        android:layout_below="@+id/etUsername"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/etPassword"
        android:hint="Introduce Password"
        android:background="@drawable/border"
        android:textSize="16dp"
        android:paddingLeft="8px"

        />

</RelativeLayout>
